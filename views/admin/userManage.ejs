<%-include('includes/header')%>
    <%-include('includes/sidebar')%>
        <div class="app-wrapper">
            <div class="app-content pt-3 p-md-3 p-lg-4">
                <div class="container-xl">

                    <nav id="orders-table-tab"
                        class="orders-table-tab app-nav-tabs nav shadow-sm flex-column flex-sm-row mb-4">
                        <a class="flex-sm-fill text-sm-center nav-link active" id="orders-all-tab" data-bs-toggle="tab"
                            href="#users-all" role="tab" aria-controls="orders-all" aria-selected="true">All Users</a>
                        <a class="flex-sm-fill text-sm-center nav-link" id="orders-paid-tab" data-bs-toggle="tab"
                            href="#users-blocked" role="tab" aria-controls="orders-paid" aria-selected="false">BLocked Users</a>
                    </nav>


                    <div class="tab-content" id="orders-table-tab-content">
                        <div class="tab-pane fade show active" id="users-all" role="tabpanel"
                            aria-labelledby="orders-all-tab">
                            <div class="app-card app-card-orders-table shadow-sm mb-5">
                                <div class="app-card-body">
                                    <div class="table-responsive" id="usersTable">
                                            <table class="table app-table-hover mb-0 text-left">
                                                <thead>
                                                    <tr>
                                                        <th class="cell">User Name</th>
                                                        <th class="cell">Email</th>
                                                        <th class="cell">Phone No</th>
                                                        <th class="cell">User Created</th>
                                                        <th class="cell">Status</th>
                                                        <th class="cell">Action</th>
                                                        <th class="cell">Delete</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="users-table-body">
                                                    <% users.forEach((user)=> { %>
                                                    <tr>
                                                        <td class="cell"><%=user.name%></td>
                                                        <td class="cell"><span class="truncate"><%= user.email %></span></td>
                                                        <td class="cell"><%= user.phone %></td>
                                                        <td class="cell"><span><%= new Date(user.createdAt).toLocaleDateString() %></span></td>
                                                        <td class="cell">
                                                            <% if (user.isBlocked) { %>
                                                                    <span class="badge bg-danger">Blocked</span>
                                                            <% } else { %>
                                                            <span class="badge bg-success">Active</span>
                                                            <% } %>
                                                        </td>
                                                        <td class="cell">
                                                            <% if (user.isBlocked) { %>
                                                                <span class="btn-sm app-btn-secondary unblock-btn" data-id="<%= user._id %>" style="cursor: pointer;" >Unblock</span>
                                                            <% } else { %>
                                                                <span class="btn-sm app-btn-secondary block-btn" data-id="<%= user._id %>" style="cursor: pointer;">Block</span>
                                                            <% } %>
                                                        </td>
                                                        <td class="cell">
                                                            <span class="btn-sm app-btn-danger delete-button" data-id="<%= user._id %>" style="cursor: pointer;">Delete</span></td>
                                                    </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>
                                    </div><!--//table-responsive-->

                                </div><!--//app-card-body-->
                            </div><!--//app-card-->
                            <nav class="app-pagination">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                                    </li>
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </nav><!--//app-pagination-->

                        </div><!--//tab-pane-->

                        <div class="tab-pane fade" id="users-blocked" role="tabpanel" aria-labelledby="orders-paid-tab">
                            <div class="app-card app-card-orders-table mb-5">
                                <div class="app-card-body">
                                    <div class="table-responsive">
                                        <table class="table mb-0 text-left">
                                            <thead>
                                                <tr>
                                                    <th class="cell">User Name</th>
                                                    <th class="cell">Email</th>
                                                    <th class="cell">Phone No</th>
                                                    <th class="cell">User Created</th>
                                                    <th class="cell">Status</th>
                                                    <th class="cell">View User</th>
                                                </tr>
                                            </thead>
                                        <tbody>
                                            <% users.forEach((user)=> { %>
                                                <% if (user.isBlocked) { %>
                                                <tr>
                                                    <td class="cell">
                                                        <%=user.name%>
                                                    </td>
                                                    <td class="cell"><span class="truncate">
                                                            <%= user.email %>
                                                        </span></td>
                                                    <td class="cell">
                                                        <%= user.phone %>
                                                    </td>
                                                    <td class="cell"><span>
                                                            <%= new Date(user.createdAt).toLocaleDateString() %>
                                                        </span></td>
                                                    <td class="cell">
                                                        <% if (user.isBlocked) { %>
                                                            <span class="badge bg-danger">Blocked</span>
                                                            <% } else { %>
                                                                <span class="badge bg-success">Active</span>
                                                                <% } %>
                                                    </td>
                                                    <td class="cell">
                                                        <% if (user.isBlocked) { %>
                                                            <span class="btn-sm app-btn-secondary unblock-btn" data-id="<%= user._id %>"
                                                                style="cursor: pointer;">Unblock</span>
                                                            <% } else { %>
                                                                <span class="btn-sm app-btn-secondary block-btn" data-id="<%= user._id %>"
                                                                    style="cursor: pointer;">Block</span>
                                                                <% } %>
                                                    </td>
                                                    <td class="cell">
                                                        <span class="btn-sm app-btn-danger delete-button" data-id="<%= user._id %>"
                                                            style="cursor: pointer;">Delete</span>
                                                    </td>
                                                </tr>   
                                                    <% } %>
                                            <% }) %>
                                        </tbody>
                                        </table>
                                    </div><!--//table-responsive-->
                                </div><!--//app-card-body-->
                            </div><!--//app-card-->
                        </div><!--//tab-pane-->
                    </div><!--//tab-content-->
                </div><!--//container-fluid-->
            </div><!--//app-content-->
  </div><!--//app-wrapper-->
<%-include('includes/footer')%>