<%- include('includes/header') %>
    <%- include('includes/sidebar') %>
        <div class="app-wrapper">
            <div class="app-content pt-3 p-md-3 p-lg-4">
                <div class="container-xl">
                    <div class="row g-3 mb-4 align-items-center justify-content-between">
                        <div class="col-auto">
                            <h1 class="app-page-title mb-0">Banner List</h1>
                        </div>
                        <div class="col-auto">
                            <div class="page-utilities">
                                <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
                                    <div class="col-auto">
                                        <form class="table-search-form row gx-1 align-items-center">
                                            <div class="col-auto">
                                                <input type="text" id="search-orders" name="searchBanners"
                                                    class="form-control search-orders" placeholder="Search">
                                            </div>
                                            <div class="col-auto">
                                                <button type="submit" class="btn app-btn-secondary">Search</button>
                                            </div>
                                        </form>
                                    </div><!--//col-->
                                    <div class="col-auto">
                                        <span class="btn app-btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#newBannerModal" style="cursor:pointer">New Banner</span>
                                    </div>
                                </div><!--//row-->
                            </div><!--//table-utilities-->
                        </div><!--//col-auto-->
                    </div><!--//row-->
        
                    <nav id="banners-table-tab"
                        class="orders-table-tab app-nav-tabs nav shadow-sm flex-column flex-sm-row mb-4">
                        <span class="flex-sm-fill text-sm-center nav-link active" id="banners-all-tab">All Banners</span>
                    </nav>
    
                    <div class="tab-content" id="banner-table-tab-content">
                        <div class="tab-pane fade show active" id="banners-all" role="tabpanel" aria-labelledby="banners-all-tab">
                            <div class="app-card app-card-orders-table shadow-sm mb-5">
                                <div class="app-card-body" id="bannerTable">
                                    <div class="table-responsive">
                                        <table class="table app-table-hover mb-0 text-left">
                                            <thead>
                                                <tr>
                                                    <th class="cell">Banner Title</th>
                                                    <th class="cell">Image</th>
                                                    <th class="cell">Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% banners.forEach((banner)=> { %>
                                                    <tr>
                                                        <td class="cell">
                                                            <%= banner.title %>
                                                        </td>
                                                        </td>
                                                        <td class="cell">
                                                            <%  banner.image.forEach((img)=> { %>
                                                                <div class="image-container">
                                                                    <img src="/<%= img %>" alt="Banner Image"
                                                                        style="width: 100px; height: 100px;">
                                                                </div>
                                                                <% }) %>
                                                        </td>
                                                        <td class="cell">
                                                            <span class="btn-sm app-btn-danger delete-button" style="cursor: pointer;" id="bannerDeleteBtn" data-id="<%=banner._id%>">Delete</span>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div><!--//table-responsive-->
                                </div><!--//app-card-body-->
                            </div><!--//app-card-->
                         </div>
                     </div>
                </div><!--//container-xl-->
            </div><!--//app-content-->
        </div>


                                <!-- Modal Add Product-->
                                <div class="modal fade" id="newBannerModal" tabindex="-1" aria-labelledby="newBannerModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="newBannerModalLabel">New Banner</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <form id="newBannerForm" enctype="multipart/form-data">
                                                    <div class="mb-3">
                                                        <label for="bannerTitle" class="form-label">Banner Title</label>
                                                        <input type="text" class="form-control" id="bannerTitle" name="title"
                                                            placeholder="Enter product name">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="image" class="form-label">Upload Image</label>
                                                        <input type="file" class="form-control" id="image" name="image" multiple>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary" id="addBannerBtn">Add Banner</button>
                                                </form>
                                                <div id="loadingSpinnerBanner" class="spinner-border text-primary" role="status" style="display: none;">
                                                    <span class="visually-hidden">Loading...</span>
                                                </div>
                                                <div id="statusMessageBanner" class="alert" style="display: none;"></div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Modal Add Product-->

            <%- include('includes/footer') %>