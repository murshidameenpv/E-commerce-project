
<%-include('includes/header')%>
<%-include('includes/navbar')%>
<!--SECTION 1-->
<div id="main-section">
   <section id="send-otp" class="pt-5 pb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="login_box">
                        <h3 class="text-center">Login</h3>
                        <form id="otpLoginForm" method="post" action="/send-otp">
                            <div class="form-group">
                                <label for="phone">Phone Number</label>
                                <input type="text" class="form-control" id="phone" name="phone" required>
                                <p id="number-status" class="text-center blink_me"></p>
                                <% if (typeof message !=='undefined' ) { %>
                                    <p class="text-center blink_me">
                                        <%= message %>
                                    </p>
                                    <% } %>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary">Send OTP</button>
                            </div>
                            <div class="form-group text-center">
                                <p class="text-muted">Don't have an account? <a href="/signup">Sign up</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--SECTION 2-->
   <section id="login-otp" class="pt-5 pb-5" style="display: none;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="login_box">
          <form action="/verify" method="post">
            <input type="hidden" name="phone" value="">
            <div class="form-group">
              <label for="phone">Enter The OTP</label>
              <input type="text" class="form-control" id="otp" name="otp" required>
            </div>
            <div class="form-group text-center">
              <button type="submit" class="btn btn-primary">LogIn</button>
            </div>
          </form>
          <div class="form-group text-center">
            <p  id="countdown"></p>
            <p  id="resendOtpLink" style="display: none;cursor: pointer;">Resend OTP</p>
          </div>  
        </div>
      </div>
    </div>
  </div>
</section>
</div>
    
<%-include('includes/footer')%>