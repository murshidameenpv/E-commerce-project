<script>
   const targetDate = new Date();
    targetDate.setDate(targetDate.getDate() + 10);
    function updateCountdown() {
            // Calculate the time remaining
            const now = new Date();
            const timeRemaining = targetDate - now;

            // Calculate the number of days, hours, minutes, and seconds remaining
            const days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
            const hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

            // Update the countdown display
            document.querySelectorAll('.deal_1r2im2 ul').forEach(ul => {
                ul.querySelector('li:nth-child(1) span').textContent = days.toString().padStart(2, '0');
                ul.querySelector('li:nth-child(2) span').textContent = hours.toString().padStart(2, '0');
                ul.querySelector('li:nth-child(3) span').textContent = minutes.toString().padStart(2, '0');
                ul.querySelector('li:nth-child(4) span').textContent = seconds.toString().padStart(2, '0');
            });
        }
    setInterval(updateCountdown, 1000);

</script>
