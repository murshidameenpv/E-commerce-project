
<%-include('includes/header')%>
<%-include('includes/navbar')%>

<section id="login" class="pt-5 pb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login_box">
                    <h3 class="text-center">Login</h3>
                    <form action="/login" method="POST" id="loginForm">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <%if (message && message.field==='user' ) {%>
                            <p id="msg" class="blink_me">
                                <%=message.msg%>
                            </p>
                            <% } %>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                        <div class="form-group text-center">
                            <p class="text-muted">Don't have an account? <a href="/signup">Sign up</a></p>
                        </div>
                    </form>
                    <hr>
                    <p class="text-center">
                        <a href="/login/forgotPassword">Forgot password?</a>/
                        <a href="/login/otplogin" id="otpLink">Or login with OTP</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<%-include('includes/footer')%>